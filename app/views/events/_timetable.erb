<table class = timetable>
  <thead>

    <tr>
      <th></th>
      <% day_iterator do |day| %>
        <th>
          <%= day %>
        </th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% (0...24).each do |n| %>
      <tr>
        <td>
          <%= "#{time_label n} - #{time_label n + 1}"%>
        </td>
        <% (0..7).each do %>
          <td></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>