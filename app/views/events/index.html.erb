<p id="notice"><%= notice %></p>
<% if @events && @events.size > 0 %>
  <h1>Events</h1>

  <table>
    <thead>
      <tr>
        <th>Id</th>
        <th>Day</th>
        <th>Time</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @events.each do |event| %>
        <tr>
          <td><%= event.id %></td>
          <td><%= event.day %></td>
          <td><%= event.time %></td>
          <td><%= link_to 'Destroy', user_event_path(@user, event.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
<% else %>
  <h1> No events </h1>
<% end %>